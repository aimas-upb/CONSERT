<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
	
   <extension
         point="org.eclipse.ui.commands">
      <category
            name="Sample Category"
            id="ConsertTest.commands.category">
      </category>
      <command
            name="Sample Command"
            categoryId="ConsertTest.commands.category"
            id="ConsertTest.commands.sampleCommand">
      </command>
      <command
            defaultHandler="conserttest.handlers.CallEditor"
            id="ConsertTest.openEditor"
            name="Open Task Editor">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            commandId="ConsertTest.commands.sampleCommand"
            class="conserttest.handlers.SampleHandler">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="ConsertTest.commands.sampleCommand"
            contextId="org.eclipse.ui.contexts.window"
            sequence="M1+6"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu?after=additions">
         <menu
               label="Sample Menu"
               mnemonic="M"
               id="ConsertTest.menus.sampleMenu">
            <command
                  commandId="ConsertTest.commands.sampleCommand"
                  mnemonic="S"
                  id="ConsertTest.menus.sampleCommand">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="ConsertTest.toolbars.sampleToolbar">
            <command
                  commandId="ConsertTest.commands.sampleCommand"
                  icon="icons/sample.gif"
                  tooltip="Say hello world"
                  id="ConsertTest.toolbars.sampleCommand">
            </command>
         </toolbar>
      </menuContribution>
   </extension>
   <extension
         id="ConsertTest.menus.testMenu"
         point="org.eclipse.e4.workbench.model">
      <fragment
            apply="notexists"
            uri="fragment.e4xmi">
      </fragment>
   </extension>
   <extension
         id="ContextEntityExtension"
         name="ContextEntityExtension"
         point="org.eclipse.ui.newWizards">
       	<category 
        	id="com.xyz.XYZ" 
        	name="Consert"> 
      	</category> 
      	<category 
        	id="com.xyz.XYZ.Web" 
        	name="Context Model Definition" 
        	parentCategory="com.xyz.XYZ"> 
      	</category> 
      	<wizard 
          id="com.xyz.wizard1" 
          name="ContextEntity" 
          category="com.xyz.XYZ/com.xyz.XYZ.Web" 
          icon="./icons/XYZwizard1.gif" 
          class="conserttest.wizards.MyNewWizard"> 
          <description> 
              Emilia's simple XYZ artifact and set initial content 
          </description> 
           <selection class="conserttest.wizards.MyNewWizard"/>          
      	</wizard> 
   </extension>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="conserttest.editors.MyEditor"
            default="false"
            id="ConsertTest.MyEditor"
            name="ConsertEditor">
      </editor>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            class="conserttest.editors.TaskOverview"
            id="ConsertTest.taskoverview"
            name="Task Overview"
            restorable="true">
      </view>
   </extension>

</plugin>
